<%= form_for @trip do |f| %>

    <div class="colx2-container">
      <div class="colx2">
        <%= f.label :title %>
        <%= f.text_field :title %><br />

        <%= f.label :description %>
        <%= f.text_area :description %><br />
      </div>
      <div class="colx2 col2">
        <div class="colx2-container">
          <div class="colx2">
            <%= f.label :date_start %><br />
            <%= f.date_select :date_start, :order => [:day, :month, :year] , :include_blank => true %>
          </div>
          <div class="colx2 col2">
            <%= f.label :date_end %><br />
            <%= f.date_select :date_end, :order => [:day, :month, :year] , :include_blank => true %>
          </div>
        </div>

        <p><%= f.label :main_country %><br/>
        <%= country_select("trip", "main_country") %><br /></p>

        <p><%= f.label :image %><br />
        <%= f.file_field :image %></p>
      </div>
    </div>

    <%= f.submit %>
<% end %>