<% content_for :title, "Trips" %>

<h1>Trips (temporaire)</h1>
<ul>
  <% @trips.each do |trip| %>
    <li>
      <%= link_to trip.title, trip %> <%= trip.id %>, <%= trip.description %>
      <%= button_to "delete", trip, :method=>:delete, :class=>:destroy %>
      <%= link_to "update", edit_trip_path(trip.id) %>

    </li>
  <% end %>

  <% if @trips.empty? %>
    <p>Aucun voyage</p>
  <% end %>


  <br/>

  <% if user_signed_in? %>
    loged : <br/>
    <%= current_user.email %> <br/>
    <%= link_to "Logout", destroy_user_session_url, :method => :delete %>

  <% else %>

      <%= link_to "Subscribe", new_user_registration_url %>
      <%= link_to "Login", user_session_url %>
  <% end %>
</ul>
